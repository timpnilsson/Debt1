<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rec_static"
        android:text="RECIPIENT(S)"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/rec_input"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="20dp"
        android:layout_below="@+id/rec_static"
        android:background="@color/black"
        />
    <Button
        android:id="@+id/add_recipient"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/rec_static"
        android:layout_toRightOf="@+id/rec_input"
        android:background="@drawable/add_rec"
        />
    <TextView
        android:id="@+id/amount_static"
        android:text="AMOUNT"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rec_input"
        />
    <TextView
        android:id="@+id/amount_input"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="20dp"
        android:layout_below="@+id/amount_static"
        android:background="@color/black"
        android:layout_marginBottom="20dp"
        />
    <Spinner
        android:id="@+id/recOrSend"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/amount_input"
        android:entries="@array/payOrPaid"
        android:background="@color/black"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.DrawerArrowToggle"


        />
    <TextView
        android:id="@+id/message_static"
        android:text="MESSAGE"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recOrSend"/>
    <TextView
        android:id="@+id/message_input"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="20dp"
        android:layout_below="@+id/message_static"
        android:background="@color/black"
        />


</RelativeLayout>